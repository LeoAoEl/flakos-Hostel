---
import Layout from "@layouts/Layout.astro";
import Parallax from "@components/shared/Parallax.astro";
import Mv from "@components/home/Mv.astro";
import Intro from "@components/shared/Intro.astro";
import Contact from "@components/home/Contact.astro";
import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { topTitle, topDescription, bottomTitle, bottomDescription } = i18n.About;
const { title, description, url, keywords } = i18n.SEO.about;
const { intro } = i18n.Intro.about;
---

<Layout title={title} description={description} url={url} keywords={keywords}>
  <Parallax
    bgTop="bg-AboutTopBG"
    bgBottom="bg-AboutBottomBG"
    showContent
    isBackGround
    topTitle={topTitle}
    topParagraph={topDescription}
    bottomTitle={bottomTitle}
    bottomParagraph={bottomDescription}
  >
    <Intro intro={intro} />
    <Mv />
  </Parallax>
  <Contact />
</Layout>
