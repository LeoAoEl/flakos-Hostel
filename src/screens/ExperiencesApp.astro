---
import Layout from "@layouts/Layout.astro";
import Parallax from "@components/shared/Parallax.astro";
import Intro from "@components/shared/Intro.astro";
import ExpSwipper from "@components/ExpSwipper";
import { getI18N } from "@i18n/index";


const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { topTitle, topDescription, bottomTitle, bottomDescription } =
  i18n.Experiences;
const { Content } = i18n.Experiences;
const { title, description, url, keywords } = i18n.SEO.experiences;
const { intro } = i18n.Intro.experiences;
---

<Layout title={title} description={description} url={url} keywords={keywords}>
  <Parallax
    bgTop="bg-ExpTopBG"
    bgBottom="bg-ExpBottomBG"
    isBackGround
    showContent
    topTitle={topTitle}
    topParagraph={topDescription}
    bottomTitle={bottomTitle}
    bottomParagraph={bottomDescription}
  >
    <Intro intro={intro} />
    <ExpSwipper client:visible content={Content} />
  </Parallax>
</Layout>
