---
import ChevronIcon from "@assets/icons/ChevronIcon.astro";
import { languages } from "@i18n/ui";

import {
  getRouteFromUrl,
  useTranslatedPath,
  getLangFromUrl,
} from "@i18n/utils";

const route = getRouteFromUrl(Astro.url);
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const currentLocaleData = languages[lang];
const otherLocales = Object.values(languages).filter(
  (locale) => locale.code !== lang
);
---

<div class="relative inline-block text-left">
  <div
    class="transition-all ease-in group text-textPrimary rounded-md text-sm font-semibold bg-azulCielo/40 hover:bg-azulOcean hover:text-sandy"
  >
    <button
      type="button"
      class="inline-flex justify-start items-center w-full gap-x-2 px-2 py-2"
      aria-expanded="true"
      aria-haspopup="true"
    >
      {currentLocaleData.code}
      <ChevronIcon />
    </button>
    <ul
      class="group-hover:block group-hover:animate-fade-down group-hover:animate-duration-200 hidden pt-0.5 absolute w-full"
    >
      {
        otherLocales.map((locale) => (
          <li class="py-[2px]">
            <a
              class="rounded-md bg-azulOcean hover:bg-azulOcean/80 whitespace-no-wrap inline-flex justify-start items-center w-full gap-x-2 px-3 py-2"
              href={translatePath(`/${route ? route : ""}`, locale.code)}
            >
              {locale.code}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
