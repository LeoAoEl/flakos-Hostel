---
import Container from "@components/shared/Container.astro";
import { getI18N } from "@i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, description, note, form } = i18n.Home.contact;
---

<section
  class="min-h-screen bg-gradient-to-b from-textPrimary via-azulOcean to-sandy pt-6"
>
  <Container>
    <div class="flex-1 lg:flex lg:items-center lg:-mx-6 place-content-center">
      <div class="text-white lg:w-1/2 lg:mx-6">
        <h1 class="text-2xl font-semibold capitalize lg:text-6xl text-white">
          {title}
        </h1>

        <p class="max-w-xl mt-6 text-xl">
          {description}
        </p>

        <div class="mt-6 space-y-8 md:mt-8">
          <p
            class="flex items-start hover:underline transition-all text-xl font-bold"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>

            <a
              href="https://maps.app.goo.gl/gSnCdN8WDk3jrXxg7"
              target="_blank"
              aria-label="Google Maps"
              class="mx-2 text-white truncate w-72"
            >
              Flakos Hostel
            </a>
          </p>

          <p
            class="flex items-start hover:underline transition-all text-xl font-bold"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>

            <a
              href="tel:55 7620 9284"
              target="_blank"
              aria-label="phone call"
              class="mx-2 text-white truncate w-72">55 7620 9284</a
            >
          </p>

          <p
            class="flex items-start hover:underline transition-all text-xl font-bold"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>

            <a
              href="mailto:exaple@example.com?subject=Disponibilidad el dÃ­a"
              class="mx-2 text-white truncate w-72">flakos@example.com</a
            >
          </p>
        </div>

        <div class="mt-6 md:mt-8">
          <span class="text-white text-2xl">{note}</span>

          <div class="flex mt-4 -mx-1.5">
            <a
              class="mx-1.5 text-white transition-colors duration-300 transform hover:text-verde"
              target="_blank"
              href="https://api.whatsapp.com/send?phone=+525576209284&text=Tu%20mensaje%20predeterminado"
              aria-label="WhatsApp"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                class="fill-current h-10 w-10"
                viewBox="0 0 16 16"
              >
                <path
                  d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232"
                ></path>
              </svg>
            </a>
            <a
              class="mx-1.5 text-white transition-colors duration-300 transform hover:text-verde"
              href="https://www.facebook.com/profile.php?id=100072366591090"
              target="_blank"
              aria-label="Facebook"
            >
              <svg
                class="h-12 w-12"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M7 10.2222V13.7778H9.66667V20H13.2222V13.7778H15.8889L16.7778 10.2222H13.2222V8.44444C13.2222 8.2087 13.3159 7.9826 13.4826 7.81591C13.6493 7.64921 13.8754 7.55556 14.1111 7.55556H16.7778V4H14.1111C12.9324 4 11.8019 4.46825 10.9684 5.30175C10.1349 6.13524 9.66667 7.2657 9.66667 8.44444V10.2222H7Z"
                  fill="currentColor"></path>
              </svg>
            </a>

            <a
              class="mx-1.5 text-white transition-colors duration-300 transform hover:text-verde"
              href="https://www.instagram.com/hostel_flakos.mx?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
              target="_blank"
              aria-label="instagram"
            >
              <svg
                class="h-12 w-12"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M11.9294 7.72275C9.65868 7.72275 7.82715 9.55428 7.82715 11.825C7.82715 14.0956 9.65868 15.9271 11.9294 15.9271C14.2 15.9271 16.0316 14.0956 16.0316 11.825C16.0316 9.55428 14.2 7.72275 11.9294 7.72275ZM11.9294 14.4919C10.462 14.4919 9.26239 13.2959 9.26239 11.825C9.26239 10.354 10.4584 9.15799 11.9294 9.15799C13.4003 9.15799 14.5963 10.354 14.5963 11.825C14.5963 13.2959 13.3967 14.4919 11.9294 14.4919ZM17.1562 7.55495C17.1562 8.08692 16.7277 8.51178 16.1994 8.51178C15.6674 8.51178 15.2425 8.08335 15.2425 7.55495C15.2425 7.02656 15.671 6.59813 16.1994 6.59813C16.7277 6.59813 17.1562 7.02656 17.1562 7.55495ZM19.8731 8.52606C19.8124 7.24434 19.5197 6.10901 18.5807 5.17361C17.6453 4.23821 16.51 3.94545 15.2282 3.88118C13.9073 3.80621 9.94787 3.80621 8.62689 3.88118C7.34874 3.94188 6.21341 4.23464 5.27444 5.17004C4.33547 6.10544 4.04628 7.24077 3.98201 8.52249C3.90704 9.84347 3.90704 13.8029 3.98201 15.1238C4.04271 16.4056 4.33547 17.5409 5.27444 18.4763C6.21341 19.4117 7.34517 19.7045 8.62689 19.7687C9.94787 19.8437 13.9073 19.8437 15.2282 19.7687C16.51 19.708 17.6453 19.4153 18.5807 18.4763C19.5161 17.5409 19.8089 16.4056 19.8731 15.1238C19.9481 13.8029 19.9481 9.84704 19.8731 8.52606ZM18.1665 16.5412C17.8881 17.241 17.349 17.7801 16.6456 18.0621C15.5924 18.4799 13.0932 18.3835 11.9294 18.3835C10.7655 18.3835 8.26272 18.4763 7.21307 18.0621C6.51331 17.7837 5.9742 17.2446 5.69215 16.5412C5.27444 15.488 5.37083 12.9888 5.37083 11.825C5.37083 10.6611 5.27801 8.15832 5.69215 7.10867C5.97063 6.40891 6.50974 5.8698 7.21307 5.58775C8.26629 5.17004 10.7655 5.26643 11.9294 5.26643C13.0932 5.26643 15.596 5.17361 16.6456 5.58775C17.3454 5.86623 17.8845 6.40534 18.1665 7.10867C18.5843 8.16189 18.4879 10.6611 18.4879 11.825C18.4879 12.9888 18.5843 15.4916 18.1665 16.5412Z"
                  fill="currentColor"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="mt-8 lg:w-1/2 lg:mx-6">
        <div
          class="w-full px-8 py-10 drop-shadow-2xl bg-form mx-auto overflow-hidden shadow-2xl rounded-xl lg:max-w-xl"
        >
          <h1 class="text-xl font-medium text-white">{form.title}</h1>

          <form class="mt-4 text-white">
            <div class="flex-1">
              <label class="block mb-2 text-sm">{form.name}</label>
              <input
                type="text"
                placeholder="John Doe"
                class="block w-full px-5 py-3 mt-2 text-textPrimary bg-sandy border rounded-md dark:border-textPrimary/90 focus:border-textPrimary focus:ring-texborder-textPrimary focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>
            <div class="flex-1 mt-6">
              <label class="block mb-2 text-sm">{form.phone}</label>
              <input
                type="number"
                placeholder="1241256"
                class="block w-full px-5 py-3 mt-2 text-textPrimary bg-sandy border rounded-md dark:border-textPrimary/90 focus:border-textPrimary focus:ring-texborder-textPrimary focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div class="flex-1 mt-6">
              <label class="block mb-2 text-sm">{form.email}</label>
              <input
                type="email"
                placeholder="johndoe@example.com"
                class="block w-full px-5 py-3 mt-2 text-textPrimary bg-sandy border rounded-md dark:border-textPrimary/90 focus:border-textPrimary focus:ring-texborder-textPrimary focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div class="w-full mt-6">
              <label class="block mb-2 text-sm">{form.message}</label>
              <textarea
                class="block w-full px-5 py-3 mt-2 text-textPrimary bg-sandy border rounded-md dark:border-textPrimary/90 focus:border-textPrimary focus:ring-texborder-textPrimary focus:ring-opacity-40 focus:outline-none focus:ring"
                placeholder="Message"></textarea>
            </div>

            <button
              class="w-full px-6 py-3 mt-6 text-sm font-medium tracking-wide hover:text-white capitalize transition-all text-textPrimary duration-300 transform shadow-2xl bg-sandy hover:bg-textPrimary rounded-md focus:ring-opacity-50"
            >
              {form.submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </Container>
</section>
