---
import Title from "@components/shared/Title.astro";

import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, Mititle, Mibody, Vititle, Vibody } = i18n.Home.mivi;
---

<div class="py-10 flex flex-col items-center">
  <Title title={title} />
  <div class="grid gap-6 md:grid-cols-2">
    <div class="shadow-2xl rounded-lg overflow-hidden bg-backGround">
      <div class="p-6 leading-normal">
        <span
          class="text-2xl md:text-3xl font-bold mb-4 text-textPrimary text-center"
        >
          {Mititle}
        </span>
        <p class="text-textPrimary prose-invert prose-lg">
          {Mibody}
        </p>
      </div>
    </div>
    <div class="shadow-2xl rounded-lg overflow-hidden bg-backGround">
      <div class="p-6 leading-normal">
        <span
          class="text-2xl text-center md:text-3xl font-bold mb-4 text-textPrimary"
        >
          {Vititle}
        </span>
        <p class="text-textPrimary prose-invert prose-lg">
          {Vibody}
        </p>
      </div>
    </div>
  </div>
</div>
